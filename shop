        <!-- JavaScript for Filtering and Modal -->
        <script>
            // Function to apply survey filters
            function applySurveyFilters() {
                // Get selected visitor type value
                const visitorType = document.getElementById('visitor-type').value;

                // If no visitor type is selected, do nothing
                if (!visitorType) {
                    alert("Please select an option.");
                    return;
                }

                // Get all resource items
                const resources = document.querySelectorAll('#resource-list > li');

                // Filtered resources array
                let filteredResources = [];

                // Loop through each resource and determine if it should be included
                resources.forEach(resource => {
                    let includeResource = true;

                    // Check Audience (visitor-type)
                    if (visitorType) {
                        const resourceAudience = resource.dataset.audience.split(' ');
                        if (!resourceAudience.includes(visitorType)) {
                            includeResource = false;
                        }
                    }

                    // Add resource to filtered list if it meets criteria
                    if (includeResource) {
                        filteredResources.push(resource.cloneNode(true));
                    }
                });

                // Display filtered resources in modal
                showModal(filteredResources);
            }

            // Function to show modal with filtered resources
            function showModal(resources) {
                const modalOverlay = document.getElementById('modal-overlay');
                const modal = document.getElementById('recommendation-modal');
                const modalContent = document.getElementById('modal-content');

                // Clear previous content
                modalContent.innerHTML = '';

                if (resources.length === 0) {
                    modalContent.innerHTML = '<p>No resources match your criteria.</p>';
                } else {
                    const resourceList = document.createElement('ul');
                    resources.forEach(resource => {
                        resourceList.appendChild(resource);
                    });
                    modalContent.appendChild(resourceList);
                }

                // Show modal and overlay
                modalOverlay.style.display = 'block';
                modal.style.display = 'block';

                // Enable dragging of the modal
                dragElement(modal);

                // Close modal on clicking the close button or overlay
                document.getElementById('modal-close').onclick = closeModal;
                modalOverlay.onclick = closeModal;
            }

            // Function to close modal
            function closeModal() {
                document.getElementById('modal-overlay').style.display = 'none';
                document.getElementById('recommendation-modal').style.display = 'none';
            }

            // Function to make the modal draggable
            function dragElement(elmnt) {
                const modalHeader = document.getElementById('modal-header');
                let pos1 = 0, pos2 = 0, pos3 = 0, pos4 = 0;

                if (modalHeader) {
                    modalHeader.onmousedown = dragMouseDown;
                } else {
                    elmnt.onmousedown = dragMouseDown;
                }

                function dragMouseDown(e) {
                    e = e || window.event;
                    e.preventDefault();

                    // Get the mouse cursor position at startup
                    pos3 = e.clientX;
                    pos4 = e.clientY;

                    document.onmouseup = closeDragElement;
                    document.onmousemove = elementDrag;
                }

                function elementDrag(e) {
                    e = e || window.event;
                    e.preventDefault();

                    // Calculate the new cursor position
                    pos1 = pos3 - e.clientX;
                    pos2 = pos4 - e.clientY;

                    pos3 = e.clientX;
                    pos4 = e.clientY;

                    // Set the element's new position
                    elmnt.style.top = (elmnt.offsetTop - pos2) + "px";
                    elmnt.style.left = (elmnt.offsetLeft - pos1) + "px";
                }

                function closeDragElement() {
                    // Stop moving when mouse button is released
                    document.onmouseup = null;
                    document.onmousemove = null;
                }
            }
        </script>
    </div>
