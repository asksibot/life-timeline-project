<script>
// Function to handle form submission and generate summary of responses
document.getElementById('surveyForm').addEventListener('submit', function(event) {
    event.preventDefault();

    // Capture name, age, and date values
    const name = document.getElementById('name').value;
    const age = document.getElementById('age').value;
    const date = document.getElementById('date').value;

    // Variables to track areas of strength and potential challenges
    let strengths = [];
    let challenges = [];

    // Function to evaluate a response
    function evaluateResponse(name, description) {
        let value = document.querySelector(`input[name="${name}"]:checked`)?.value;
        if (value) {
            value = parseInt(value);
            if (value >= 6) {
                strengths.push(description);
            } else if (value <= 3) {
                challenges.push(description);
            }
        }
    }

    // Evaluate responses
    evaluateResponse("response1", "Thinking before acting or speaking");
    evaluateResponse("response2", "Waiting without interrupting others");
    evaluateResponse("response3", "Following rules");
    evaluateResponse("response4", "Remembering instructions");
    evaluateResponse("response5", "Keeping track of tasks");
    evaluateResponse("response6", "Following multiple-step instructions");
    evaluateResponse("response7", "Staying calm when things don't go your way");
    evaluateResponse("response8", "Not letting small things bother you");
    evaluateResponse("response9", "Keeping emotions in check at school");
    evaluateResponse("response10", "Starting work promptly when asked");
    evaluateResponse("response11", "Avoiding procrastination");
    evaluateResponse("response12", "Beginning work without reminders");
    evaluateResponse("response13", "Focusing on schoolwork even when boring");
    evaluateResponse("response14", "Finishing assignments without getting distracted");
    evaluateResponse("response15", "Returning to work after interruptions");
    evaluateResponse("response16", "Making plans to complete work on time");
    evaluateResponse("response17", "Breaking tasks into smaller steps");
    evaluateResponse("response18", "Prioritizing important tasks");
    evaluateResponse("response19", "Keeping workspace organized");
    evaluateResponse("response20", "Knowing where things are when needed");
    evaluateResponse("response21", "Having a system for organizing schoolwork");
    evaluateResponse("response22", "Estimating how long tasks will take");
    evaluateResponse("response23", "Sticking to schedules and deadlines");
    evaluateResponse("response24", "Completing work without running out of time");
    evaluateResponse("response25", "Handling changes to plans or routines");
    evaluateResponse("response26", "Adapting when things don't go as expected");
    evaluateResponse("response27", "Staying calm when things don't go your way");
    evaluateResponse("response28", "Working towards long-term goals");
    evaluateResponse("response29", "Staying focused without being distracted by fun things");
    evaluateResponse("response30", "Persisting when tasks are difficult");
    evaluateResponse("response31", "Recognizing if you're doing something right or wrong");
    evaluateResponse("response32", "Reflecting on performance to improve");
    evaluateResponse("response33", "Adjusting behavior based on feedback");
    evaluateResponse("response34", "Staying calm under pressure");
    evaluateResponse("response35", "Handling stressful situations without feeling overwhelmed");
    evaluateResponse("response36", "Performing well when there's a bit of pressure");

    // Generate the result summary
    let resultHtml = `<h2>Your Executive Functioning Profile</h2>`;
    resultHtml += `<h3>Strengths:</h3>`;
    resultHtml += strengths.length > 0 ? `<ul><li>${strengths.join('</li><li>')}</li></ul>` : `<p>No strengths identified.</p>`;

    resultHtml += `<h3>Challenges:</h3>`;
    resultHtml += challenges.length > 0 ? `<ul><li>${challenges.join('</li><li>')}</li></ul>` : `<p>No challenges identified.</p>`;

    document.getElementById('result').innerHTML = resultHtml;

    // Create a downloadable file of the results
    let resultText = `Your Executive Functioning Profile\n\nName: ${name}\nAge: ${age}\nDate: ${date}\n\nStrengths:\n${strengths.length > 0 ? strengths.join('\n') : 'No strengths identified.'}\n\nChallenges:\n${challenges.length > 0 ? challenges.join('\n') : 'No challenges identified.'}`;
    createDownloadLink(resultText);
});
      
// Function to create a downloadable text file of the results
function createDownloadLink(text) {
    const blob = new Blob([text], { type: 'text/plain' });
    const link = document.createElement('a');
    link.href = URL.createObjectURL(blob);
    link.download = 'executive_functioning_results.txt';
    link.textContent = 'Download Your Results';
    link.style.display = 'inline-block';
    link.style.marginTop = '20px';
    link.style.padding = '10px 20px';
    link.style.backgroundColor = '#007BFF';
    link.style.color = '#fff';
    link.style.textDecoration = 'none';
    link.style.borderRadius = '5px';

    const resultDiv = document.getElementById('result');
    resultDiv.appendChild(document.createElement('br'));
    resultDiv.appendChild(link);
}
</script>
        
        </body>
        </html>
