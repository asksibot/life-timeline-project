        <!-- Summary Display Section -->
        <div id="summary" style="display:none;">
            <h2>Summary Score Sheet</h2>
            <p><strong>Low Registration (Quadrant 1) Total:</strong> <span id="q1Total">0</span></p>
            <p><strong>Sensation Seeking (Quadrant 2) Total:</strong> <span id="q2Total">0</span></p>
            <p><strong>Sensory Sensitivity (Quadrant 3) Total:</strong> <span id="q3Total">0</span></p>
            <p><strong>Sensation Avoiding (Quadrant 4) Total:</strong> <span id="q4Total">0</span></p>
        
            <h3>Detailed Explanations:</h3>
            <p><strong>Low Registration:</strong> Individuals may need more sensory input to react. Suggested modifications include increasing visual cues, using alarms for reminders, and providing tactile input tools.</p>
            <p><strong>Sensation Seeking:</strong> Individuals enjoy sensory experiences and actively seek them out. Suggested modifications include allowing movement breaks, providing sensory-friendly tools, and engaging in sensory-rich activities.</p>
            <p><strong>Sensory Sensitivity:</strong> Individuals may become easily overwhelmed by sensory stimuli. Suggested modifications include limiting overstimulating environments, providing quiet spaces, and adjusting sensory input levels.</p>
            <p><strong>Sensation Avoiding:</strong> Individuals may seek to limit their exposure to sensory stimuli. Suggested modifications include respecting personal space, simplifying their environment, and using calming strategies.</p>
        
            <button type="button" class="submit-btn" onclick="saveAndDownloadResponses()">Download Summary</button>
        </div>
        
        <script>
            // Function to toggle the explanation textarea (if applicable)
            function toggleExplanation(show) {
                const explanationDiv = document.getElementById('explanation');
                if (show) {
                    explanationDiv.style.display = 'block';
                    document.getElementById('explanationText').required = true;
                } else {
                    explanationDiv.style.display = 'none';
                    document.getElementById('explanationText').required = false;
                }
            }
        
            // Function to calculate and display the summary
            function calculateSummary() {
                const formData = new FormData(document.getElementById('sensoryInsightsForm'));
                const responses = {};
                formData.forEach((value, key) => responses[key] = parseInt(value) || 0);
        
                // Define questions by quadrant
                const quadrant1Items = [3, 6, 12, 15, 21, 23, 36, 37, 39, 41, 44, 45, 52, 55, 59];
                const quadrant2Items = [2, 4, 8, 10, 14, 17, 19, 28, 30, 32, 40, 42, 47, 50, 58];
                const quadrant3Items = [7, 9, 13, 16, 20, 22, 25, 27, 31, 33, 34, 48, 51, 54, 60];
                const quadrant4Items = [1, 5, 11, 18, 24, 26, 29, 35, 38, 43, 46, 49, 53, 56, 57];
        
                // Calculate totals for each quadrant
                const q1Total = quadrant1Items.reduce((total, q) => total + (responses[`response${q}`] || 0), 0);
                const q2Total = quadrant2Items.reduce((total, q) => total + (responses[`response${q}`] || 0), 0);
                const q3Total = quadrant3Items.reduce((total, q) => total + (responses[`response${q}`] || 0), 0);
                const q4Total = quadrant4Items.reduce((total, q) => total + (responses[`response${q}`] || 0), 0);
        
                // Display totals
                document.getElementById('q1Total').textContent = q1Total;
                document.getElementById('q2Total').textContent = q2Total;
                document.getElementById('q3Total').textContent = q3Total;
                document.getElementById('q4Total').textContent = q4Total;
        
                document.getElementById('summary').style.display = 'block';
            }
        
            // Function to save and download the summary
            function saveAndDownloadResponses() {
                const date = document.querySelector('input[name="date"]').value;
        
                const summaryText = `Date: ${date}\n\n` +
                    `Summary Score Sheet\n\n` +
                    `Low Registration (Quadrant 1) Total: ${document.getElementById('q1Total').textContent}\n` +
                    `Sensation Seeking (Quadrant 2) Total: ${document.getElementById('q2Total').textContent}\n` +
                    `Sensory Sensitivity (Quadrant 3) Total: ${document.getElementById('q3Total').textContent}\n` +
                    `Sensation Avoiding (Quadrant 4) Total: ${document.getElementById('q4Total').textContent}\n\n` +
                    `Detailed Explanations:\n` +
                    `Low Registration: Individuals may need more sensory input to react.\n` +
                    `Sensation Seeking: Individuals enjoy sensory experiences and actively seek them out.\n` +
                    `Sensory Sensitivity: Individuals may become easily overwhelmed by sensory stimuli.\n` +
                    `Sensation Avoiding: Individuals may seek to limit their exposure to sensory stimuli.\n`;
        
                const blob = new Blob([summaryText], { type: 'text/plain' });
                const url = URL.createObjectURL(blob);
                const a = document.createElement('a');
                a.href = url;
                a.download = 'SensoryProfileSummary.txt';
                document.body.appendChild(a);
                a.click();
                document.body.removeChild(a);
                URL.revokeObjectURL(url);
            }
        
            // Handle form submission
            document.getElementById('sensoryInsightsForm').addEventListener('submit', function(event) {
                event.preventDefault();
                calculateSummary();
            });
        </script>
        
    </body>
    </html>
