<script>
    // Function to handle form submission and generate summary of responses
    document.getElementById('sensoryInsightsForm').addEventListener('submit', function(event) {
        event.preventDefault();

        // Variables to track section totals
        let SE_total = 0, RA_total = 0, EI_total = 0, SI_total = 0, SR_total = 0;

        // Arrays of question numbers for each section
        const SE_questions = [1, 2, 3, 4, 5, 6, 7];
        const RA_questions = [8, 9, 10, 11, 12, 13, 14];
        const EI_questions = [15, 16, 17, 18, 19, 20];
        const SI_questions = [21, 22, 23, 24, 25];
        const SR_questions = [26, 27, 28, 29, 30];

        // Function to sum up responses for a section
        function sumSection(questionsArray) {
            let total = 0;
            for (let i = 0; i < questionsArray.length; i++) {
                const qNum = questionsArray[i];
                const response = document.querySelector(`input[name="response${qNum}"]:checked`);
                if (response) {
                    total += parseInt(response.value);
                }
            }
            return total;
        }

        // Sum up each section
        SE_total = sumSection(SE_questions);
        RA_total = sumSection(RA_questions);
        EI_total = sumSection(EI_questions);
        SI_total = sumSection(SI_questions);
        SR_total = sumSection(SR_questions);

        // Calculate final scores
        let orchidScore = SE_total + EI_total + SR_total;
        let dandelionScore = RA_total + SI_total;

        // Generate the result summary
        let resultHtml = `<h2>How I Process Environmental Stimuli and Manage Stress</h2>`;
        resultHtml += `<p><strong>Sensitivity to Environment (SE) Total:</strong> ${SE_total}</p>`;
        resultHtml += `<p><strong>Resilience and Adaptability (RA) Total:</strong> ${RA_total}</p>`;
        resultHtml += `<p><strong>Emotional Intensity (EI) Total:</strong> ${EI_total}</p>`;
        resultHtml += `<p><strong>Social Interaction (SI) Total:</strong> ${SI_total}</p>`;
        resultHtml += `<p><strong>Stress Response (SR) Total:</strong> ${SR_total}</p>`;
        resultHtml += `<h3>Total Orchid Score: ${orchidScore}</h3>`;
        resultHtml += `<h3>Total Dandelion Score: ${dandelionScore}</h3>`;

        // Add definitions based on the total scores
        resultHtml += `<h3>What Your Scores Mean:</h3>`;

        if (orchidScore > dandelionScore) {
            resultHtml += `<p><strong>Orchid Traits:</strong> You are likely more sensitive to your environment and emotional experiences. You may thrive in supportive, nurturing environments but find it more challenging to adapt to stress or change. People with orchid traits often need a stable, caring setting to flourish.</p>`;
        } else if (dandelionScore > orchidScore) {
            resultHtml += `<p><strong>Dandelion Traits:</strong> You are likely more resilient and adaptable. You can handle stress well, adapt to changes easily, and are less sensitive to environmental factors. People with dandelion traits tend to thrive in a variety of situations without requiring much additional support.</p>`;
        } else {
            resultHtml += `<p><strong>Balanced Traits:</strong> You exhibit a balance of orchid and dandelion characteristics, allowing you to adapt to various environments while also being sensitive to your surroundings.</p>`;
        }

        // Section explanations
        resultHtml += `<h3>Section Explanations:</h3>`;
        resultHtml += `<p><strong>Sensitivity to Environment (SE):</strong> High scores indicate sensitivity to environmental changes, sounds, lights, and other sensory stimuli.</p>`;
        resultHtml += `<p><strong>Resilience and Adaptability (RA):</strong> High scores indicate that you adapt well to changes, handle stress, and bounce back from challenges easily.</p>`;
        resultHtml += `<p><strong>Emotional Intensity (EI):</strong> High scores reflect a tendency to experience emotions more deeply and intensely than others.</p>`;
        resultHtml += `<p><strong>Social Interaction (SI):</strong> High scores show that you enjoy being around others, feel energized by socializing, and make friends easily.</p>`;
        resultHtml += `<p><strong>Stress Response (SR):</strong> High scores suggest that you may struggle with stress or anxiety in challenging situations or new environments.</p>`;

        const resultDiv = document.getElementById('result');
        resultDiv.innerHTML = resultHtml;

        // Create a downloadable file of the results
        let resultText = `Your Orchid-Dandelion Profile\n\nSensitivity to Environment (SE) Total: ${SE_total}\nResilience and Adaptability (RA) Total: ${RA_total}\nEmotional Intensity (EI) Total: ${EI_total}\nSocial Interaction (SI) Total: ${SI_total}\nStress Response (SR) Total: ${SR_total}\n\nTotal Orchid Score: ${orchidScore}\nTotal Dandelion Score: ${dandelionScore}\n\n`;

        if (orchidScore > dandelionScore) {
            resultText += `Orchid Traits: You are likely more sensitive to your environment and emotional experiences.\n`;
        } else if (dandelionScore > orchidScore) {
            resultText += `Dandelion Traits: You are likely more resilient and adaptable.\n`;
        } else {
            resultText += `Balanced Traits: You exhibit a balance of orchid and dandelion characteristics.\n`;
        }

        resultText += `\nSection Explanations:\n`;
        resultText += `Sensitivity to Environment (SE): High scores indicate sensitivity to environmental changes, sounds, lights, and other sensory stimuli.\n`;
        resultText += `Resilience and Adaptability (RA): High scores indicate that you adapt well to changes, handle stress, and bounce back from challenges easily.\n`;
        resultText += `Emotional Intensity (EI): High scores reflect a tendency to experience emotions more deeply and intensely than others.\n`;
        resultText += `Social Interaction (SI): High scores show that you enjoy being around others, feel energized by socializing, and make friends easily.\n`;
        resultText += `Stress Response (SR): High scores suggest that you may struggle with stress or anxiety in challenging situations or new environments.\n`;

        createDownloadLink(resultText);

        // Hide the form after submission
        document.getElementById('sensoryInsightsForm').style.display = 'none';
    });

    // Function to create a downloadable text file of the results
    function createDownloadLink(text) {
        const blob = new Blob([text], { type: 'text/plain' });
        const link = document.createElement('a');
        link.href = URL.createObjectURL(blob);
        link.download = 'orchid_dandelion_results.txt';
        link.textContent = 'Download Your Results';
        link.style.display = 'inline-block';
        link.style.marginTop = '20px';
        link.style.padding = '10px 20px';
        link.style.backgroundColor = '#007BFF';
        link.style.color = '#fff';
        link.style.textDecoration = 'none';
        link.style.borderRadius = '5px';

        const resultDiv = document.getElementById('result');
        resultDiv.appendChild(document.createElement('br'));
        resultDiv.appendChild(link);
    }
</script>

</body>
</html>
